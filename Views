#VIEWS for HBASE tables

#For USER02.YUSINESS table
CREATE VIEW USER02.YUSINESS ( ROWKEY VARCHAR PRIMARY KEY, BASE.NAME VARCHAR, BASE.NEIGHBORHOOD VARCHAR, BASE.ADDRESS VARCHAR, 
BASE.CITY VARCHAR, BASE.STATE VARCHAR, BASE.POSTALCODE VARCHAR, BASE.LATITUDE VARCHAR, BASE.LONGITUDE VARCHAR,BASE.STARS VARCHAR,
BASE.REVIEWCOUNT, BASE.ISOPEN VARCHAR, BASE.CATEGORIES VARCHAR, ATTRIBUTES.SMOKING VARCHAR, ATTRIBUTES.OPEN24HOURS VARCHAR, 
HOURS.MONDAY VARCHAR ,HOURS.TUESDAY VARCHAR ,HOURS.WEDNESDAY VARCHAR ,HOURS.THURSDAY VARCHAR ,HOURS.FRIDAY VARCHAR ,HOURS.SATURDAY VARCHAR ,HOURS.SUNDAY VARCHAR);

#For USER02.YCHECKIN table
CREATE VIEW USER02.YCHECKIN ( ROWKEY VARCHAR PRIMARY KEY, PERHOUR.BUSINESSID VARCHAR, PERHOUR.WEEKDAY VARCHAR, PERHOUR.HOUR VARCHAR, PERHOUR.CHECKINS VARCHAR);
